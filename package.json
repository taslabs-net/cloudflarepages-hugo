{
  "name": "hugopage",
  "version": "1.0.1",
  "description": "Hugo documentation template for Cloudflare Workers",
  "main": "src/index.js",
  "scripts": {
    "dev": "hugo server -D",
    "build": "hugo --minify",
    "preview": "wrangler pages dev public",
    "deploy": "npm run build && wrangler deploy --env production",
    "deploy:preview": "npm run build && wrangler deploy --env preview",
    "clean": "rm -rf public resources .hugo_build.lock",
    "commit": "cz",
    "lint": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md,html,css}\"",
    "lint:fix": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md,html,css}\"",
    "format": "npm run lint:fix",
    "prepare": "husky"
  },
  "keywords": [
    "hugo",
    "documentation",
    "cloudflare-workers"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@cloudflare/kv-asset-handler": "^0.3.4",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.0",
    "prettier": "^3.6.2",
    "wrangler": "^4.26.1"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write"
    ],
    "*.{json,md,html,css}": [
      "prettier --write"
    ]
  }
}
