# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Universal settings
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# JavaScript, TypeScript, JSON files
[*.{js,jsx,ts,tsx,json}]
indent_size = 2

# Markdown files
[*.md]
indent_size = 2
# Preserve trailing whitespace for line breaks
trim_trailing_whitespace = false

# YAML files
[*.{yml,yaml}]
indent_size = 2

# HTML files
[*.html]
indent_size = 2

# CSS files
[*.{css,scss,sass,less}]
indent_size = 2

# Go files (if any Go code is added)
[*.go]
indent_style = tab
indent_size = 4

# Makefiles (tabs are required)
[Makefile]
indent_style = tab

# Git config files
[.gitconfig]
indent_style = tab

# Package files
[{package.json,package-lock.json}]
indent_size = 2

# Hugo config files
[{config.toml,config.yaml,config.json}]
indent_size = 2